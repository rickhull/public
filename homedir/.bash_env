# emacs
#
export VISUAL=emacs
export EDITOR=emacs

# gem install --user-install
#
for GEM_BIN in ~/.gem/ruby/1.9.1/bin ~/.gem/ruby/2.0.0/bin; do
  mkdir -p $GEM_BIN
  export PATH="$PATH:$GEM_BIN"
done

# git branch in bash prompt
#
if [ -e ~/.git_completion ]; then
  . ~/.git_completion
  export PS1='\[\033[1;35m\]\u@\H\[\033[0m\]:\[\033[1;35m\]\w\[\033[0m\]\[\033[1;92m\]$(__git_ps1 " (%s)")\[\033[0m\]\$ '
else
  echo "no ~/.git_completion found!"
fi

# handy
#
findsed() {
  find ./ -type f -exec sed -i "$1" {} \;
}

