# emacs
#
export VISUAL=emacs
export EDITOR=emacs

# git branch in bash prompt
#
# 1. find git's bash_completion script
# 2. source it
# 3. export PS1='\[\033[1;35m\]\u@\H\[\033[0m\]:\[\033[1;35m\]\w\[\033[0m\]\[\033[1;92m\]$(__git_ps1 " (%s)")\[\033[0m\]\$ '

# handy for e.g. recursive global search / replace
# findsed s/foo/bar/g
#
findsed() {
  find ./ -type f -exec sed -i "$1" {} \;
}

# chruby
if [ -f /usr/local/share/chruby/chruby.sh ]; then
   source /usr/local/share/chruby/chruby.sh
else
   # provide for gem install --user-install
   #
   for GEM_BIN in $HOME/.gem/ruby/*/bin; do
      export PATH="$PATH:$GEM_BIN"
   done
fi

# use locally built elixir binary if available
if [ -d $HOME/src/elixir/bin ]; then
   export PATH="$PATH:$HOME/src/elixir/bin"
fi
